<p>
  <strong>Image: </strong>
  <%= @photo.id %>
  <% if @photo.image? %>
    <div class="thumbnail">
    <%= image_tag @photo.image.url %>
  </div>
  <% end %>
</p>

<%= form_for(@comment) do |f| %>
  <%= f.hidden_field :photo_id %> 
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>

<ul>
  <% @comments.each do |comment| %>
    <li><%= comment.content %></li>
    <%= link_to "Delete",  comment, method: :delete,  class: 'btn btn-danger btn-xs' %>
  <% end %>
</ul>